{
  "name": "Brave",
  "version": "0.0.1",
  "description": "Brave laptop and desktop browser",
  "main": "./app/index.js",
  "scripts": {
    "start": "electron . --debug=5858",
    "watch": "webpack-dev-server",
    "electron-rebuild": "electron-rebuild",
    "lint": "standard",
    "build-darwin": "electron-packager . Brave --overwrite --ignore='electron-packager electron-builder electron-prebuilt electron-rebuild' --platform=darwin --arch=x64 --version=0.35.1 --icon=res/app.icns",
    "build-win64": "electron-packager . Brave --overwrite --ignore='electron-packager electron-builder electron-prebuilt electron-rebuild' --platform=win32 --arch=x64 --version=0.35.1 --icon=res/app.ico",
    "installer-darwin": "rm -f dist/Brave.dmg && electron-builder \"Brave-darwin-x64/Brave.app\" --platform=osx --out=\"dist\" --config=builderConfig.json --overwrite",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbondy/electron-sample.git"
  },
  "author": "Brian R. Bondy <netzen@gmail.com> (http://www.brianbondy.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbondy/electron-sample/issues"
  },
  "homepage": "https://github.com/bbondy/electron-sample#readme",
  "dependencies": {
    "electron-localshortcut": "^0.6.0",
    "electron-prebuilt": "^0.35.1",
    "file-loader": "^0.8.5",
    "font-awesome": "^4.5.0",
    "font-awesome-webpack": "0.0.4",
    "immutable": "^3.7.5",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "url-loader": "^0.5.7",
    "urlutil.js": "^0.1.1"
  },
  "devDependencies": {
    "asar": "^0.8.3",
    "babel": "^6.1.18",
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "css-loader": "^0.23.0",
    "electron-builder": "^2.3.1",
    "electron-packager": "^5.1.1",
    "electron-rebuild": "^1.0.2",
    "gulp": "^3.9.0",
    "less": "^2.5.3",
    "less-loader": "^2.2.1",
    "node-libs-browser": "^0.5.3",
    "pre-commit": "^1.1.2",
    "standard": "^5.4.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  },
  "standard": {
    "ignore": [
      "node_modules",
      "Brave-*",
      "less-",
      "public",
      "res"
    ]
  },
  "pre-commit": [
    "lint"
  ]
}
