{
  "name": "brave",
  "version": "0.0.3",
  "description": "Brave laptop and desktop browser",
  "main": "./app/index.js",
  "scripts": {
    "start": "NODE_ENV=development electron . --debug=5858",
    "start-win": "set NODE_ENV=development&& electron . --debug=5858",
    "start-brk": "NODE_ENV=development electron . --debug-brk=5858",
    "start-win-brk": "set NODE_ENV=development&& electron . --debug-brk=5858",
    "watch-all": "npm run watch & npm run watch-test",
    "watch-test": "NODE_ENV=test webpack --watch",
    "watch": "webpack-dev-server",
    "electron-rebuild": "electron-rebuild",
    "lint": "standard",
    "sign-darwin": "./sign-darwin.sh",
    "build-darwin": "node ./build-darwin.js",
    "build-win64": "node ./build-win64.js",
    "installer-darwin": "rm -f dist/Brave.dmg && electron-builder \"Brave-darwin-x64/Brave.app\" --platform=osx --out=\"dist\" --config=builderConfig.json --overwrite",
    "installer-win64": "rm -f dist/BraveSetup.exe && electron-builder \"Brave-win32-x64\" --platform=win --out=\"dist\" --config=builderConfig.json --overwrite",
    "zip-darwin": "node build-darwin-update.js",
    "clean-session-store": "rm -Rf ~/Library/Application\\ Support/Brave/sessionStorage",
    "postinstall": "webpack",
    "test": "NODE_ENV=test mocha --compilers js:babel-register --recursive $(find test -name '*Test.js')"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbondy/electron-sample.git"
  },
  "author": "Brian R. Bondy <netzen@gmail.com> (http://www.brianbondy.com)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/bbondy/electron-sample/issues"
  },
  "homepage": "https://github.com/bbondy/electron-sample#readme",
  "dependencies": {
    "electron-localshortcut": "^0.6.0",
    "electron-prebuilt": "git+ssh://git@github.com/brave/electron-prebuilt.git",
    "file-loader": "^0.8.5",
    "font-awesome": "^4.5.0",
    "font-awesome-webpack": "0.0.4",
    "immutable": "^3.7.5",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "url-loader": "^0.5.7",
    "urlutil.js": "^0.1.1",
    "vibrant": "git+ssh://git@github.com/jariz/vibrant.js.git#1.0"
  },
  "devDependencies": {
    "asar": "^0.8.3",
    "babel": "^6.1.18",
    "babel-core": "^6.3.15",
    "babel-loader": "^6.2.0",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.13",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "co-mocha": "^1.1.2",
    "css-loader": "^0.23.0",
    "electron-builder": "^2.3.1",
    "electron-packager": "^5.1.1",
    "electron-rebuild": "^1.0.2",
    "empty-port": "0.0.1",
    "gulp": "^3.9.0",
    "less": "^2.5.3",
    "less-loader": "^2.2.1",
    "mocha": "^2.3.4",
    "node-libs-browser": "^0.5.3",
    "node-static": "^0.7.7",
    "node-uuid": "^1.4.7",
    "pre-commit": "^1.1.2",
    "spectron": "^0.35.3",
    "standard": "^5.4.1",
    "style-loader": "^0.13.0",
    "webdriverio": "^3.3.0",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0",
    "webpack-notifier": "^1.2.1"
  },
  "standard": {
    "ignore": [
      "Brave-darwin-x64/**",
      "less/**",
      "res/**",
      "js/data/**",
      "dist/**",
      "doc/**",
      "public/**",
      "app/ext/**",
      "app/gen/**"
    ]
  },
  "pre-commit": [
    "lint"
  ]
}
